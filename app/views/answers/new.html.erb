<h1>New answer</h1>

<%= form_for "", :url => "/answers" do |f|%>
	<%= hidden_field_tag "p", params[:q] %>
	<% (0...4).each do |i| %>
		<div>
			<label>Answer: </label>
			<%= f.text_field "answer[#{i}]" %>

			<label>
				<%= f.radio_button :correct, '0'  %>
				Correct?
			</label>
		</div>
	<% end %>

	<div>
		<%= f.submit "create answer" %>
	</div>
<% end %>
<%= link_to 'Back', answers_path %>
